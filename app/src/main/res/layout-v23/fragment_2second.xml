<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BEC8F"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:autofillHints=""
                android:ems="10"
                android:fontFamily="cursive"
                android:gravity="center"
                android:hint="@string/t_t_one_day_one_rupees_educational_kit"
                android:inputType="textPersonName"
                android:paddingStart="1dp"
                android:paddingEnd="3dp"
                android:text="@string/t_t_one_day_one_rupees_educational_kit"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="561dp"
                android:paddingStart="1dp"
                android:paddingTop="8dp"
                android:paddingEnd="3dp"
                android:text="@string/call221"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:gravity="bottom|right"
                android:paddingStart="1dp"
                android:paddingEnd="3dp"
                android:text="2/5"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/viewpager2"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="Swipe Right for next page ->"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>